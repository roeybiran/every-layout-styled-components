{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist/types"
  }
}
